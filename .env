# ===========================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=crm_user
DB_PASSWORD=ВАШ_ПАРОЛЬ_ДЛЯ_БАЗЫ_ДАННЫХ
DB_NAME=construction_crm

# ===========================================
# НАСТРОЙКИ СЕРВЕРА
# ===========================================
PORT=3000
NODE_ENV=production

# ===========================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ===========================================
JWT_SECRET=ВАШ_СЕКРЕТНЫЙ_КЛЮЧ_ДЛЯ_JWT_ТОКЕНОВ

# ===========================================
# НАСТРОЙКИ ОГРАНИЧЕНИЙ
# ===========================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_REQUESTS=100

# ===========================================
# НАСТРОЙКИ CORS
# ===========================================
ALLOWED_ORIGIN=https://yourdomain.com

# ===========================================
# НАСТРОЙКИ ЗАГРУЗКИ ФАЙЛОВ
# ===========================================
MAX_FILE_SIZE=52428800

# ===========================================
# ИНСТРУКЦИЯ ПО НАСТРОЙКЕ:
# 1. Замените ВАШ_ПАРОЛЬ_ДЛЯ_БАЗЫ_ДАННЫХ на пароль, который вы создали для пользователя MySQL
# 2. Замените ВАШ_СЕКРЕТНЫЙ_КЛЮЧ_ДЛЯ_JWT_ТОКЕНОВ на любой сложный пароль
# 3. Замените https://yourdomain.com на ваш домен (если есть)
# ===========================================